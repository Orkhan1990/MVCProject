@model EntitiesLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekle</h1>
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adi")
    @Html.TextBoxFor(p => p.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.CategoryName);

    @Html.Label("Kategori Aciklamasi")
    @Html.TextBoxFor(p => p.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.CategoryDescription);
    <br/>
  <button class="btn btn-primary">Kaydet</button>
}


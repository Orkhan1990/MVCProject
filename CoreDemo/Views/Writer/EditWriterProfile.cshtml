@model Writer
@{
    ViewData["Title"] = "EditWriterProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("EditWriterProfile", "Writer", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazarın profil məlumatı</h4>
                <br/>
                <form class="forms-sample">
                    @Html.HiddenFor(p => p.WriterID, new { @class = "form-control" })
                    <div class="form-group">
                        <label for="exampleInputName1">Ad,Soyad</label>
                        @Html.TextBoxFor(p => p.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Email Address</label>
                        @Html.TextBoxFor(p => p.EmailAddress, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Parol</label>
                        @Html.PasswordFor(p => p.Password, new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        <label>Şəkil yüklə</label>
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Şəkil seç">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Yüklə</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Haqqında</label>
                        @Html.TextAreaFor(p => p.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Təsdiqlə</button>
                    <button class="btn btn-light">Ləğv et</button>
                </form>
            </div>
        </div>
    </div>

}

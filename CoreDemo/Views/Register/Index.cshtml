@model Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Qeydiyyatdan Keç</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad,Soyad</label>
                            @Html.TextBoxFor(p => p.WriterName, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.WriterName, "", new { @class = "text-danger" })
                            @*

        <input type="text" class="form-control" id="validationDefault01" placeholder="" required="" name="WriterName">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Elektron ünvan</label>
                            @Html.TextBoxFor(p => p.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.EmailAddress, "", new { @class = "text-danger" })
                            @*<label for="validationCustom02">Elektron ünvan</label>
        <input type="text" class="form-control" id="validationDefault02" name="EmailAddress" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifrə</label>
                            @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                            @*<label for="exampleInputPassword1 mb-2">Şifrə</label>
        <input type="password" class="form-control" id="password1" name="Password" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şəkil</label>
                            @Html.TextBoxFor(p => p.WriterImage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.WriterImage, "", new {@class="text-danger"})
                            @*<label for="exampleInputPassword2 mb-2">Şəkil</label>
        <input type="text" class="form-control" id="password2" name="WriterImage" placeholder="" required="">*@
                        </div>


                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Qeydiyyat Ol</button>
                    <p>
                        <a href="#" id="btn">Qaydaları oxu,qəbul edirsənsə təsdiqlə!</a>
                    </p>
                }

            </div>
        </div>
    </div>
</section>
<script>
    $("#btn").click(function () {
        swal("Şərtlər","Sistemə daxil etdiyiniz elektron ünvan üzərindən məlumat və xəbərləri spam ölçüsünə varmadan göndərilməyə davam etdiriləcək.Əgər bu prossesi dayandırmaq istəsəniz mesaj göndərmək funksiyasını dayandıra bilərsiniz.Sizin məlumatlarınız bizim bazaya şifrəli olaraq yüklənir və saxlanılır.Sizin məlumatlar maksimum şəkildə qorunur.");

    })
</script>


